extends ../layout/common

block content
	h1 Create user

	if errors
		each error in errors
			.alert.alert-danger= error

	form(action="/users/create", method="POST", class="d-flex")
		.form-group
			label Name
			input(type='text', name='name', class="form-control", value=values ? values.name : "")
		.form-group
			label(for="phone") Phone
			input#phone.form-control(name="phone", type="text", value=values ? values.phone : "")
		button.btn.btn-primary Create