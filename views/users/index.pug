extends ../layout/common

block content
	h1 Users

	a(href="/users/create") New

	form(action = "/users/search", method="GET")
		input(name = 'q', type = "text")
		button search

	table.table
		tr
			th Name
			th Phone
			th
		each user in users
			tr
				td= user.name
				td= user.phone
				td
					a.btn.btn-light(href='/users/' + user.id) View